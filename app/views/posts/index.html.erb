<%= link_to "Create New Post", new_post_path, class: "btn btn-primary"%>
<h1>Posts</h1>



  <% @posts.each do |post| %>
    <p>
      <span class="break-text"><%= post.title %> - <%= link_to("Show Post", post) %></span> |
      <%= link_to "Delete Post", post_path(post), method: :delete, data: { confirm: 'Are you sure you want to delete this post?' } %>
    </p>
  <% end %>

<style>
  .break-text {
    word-wrap: break-word;
  }
</style>
