<% if user_signed_in? %>
  <%= link_to "Create New Post", new_post_path, class: "btn btn-primary"%>
  <h1>Posts</h1>
    <% @posts.each do |post| %>
      <p>
        <span class="break-text"><%= post.title %> - <%= link_to("Show Post", post) %></span> |
        <%= link_to "Delete Post", post_path(post), method: :delete, data: { confirm: 'Are you sure you want to delete this post?' } %>
      </p>
    <% end %>
<% else %>
  <div class="text-center">
  <h4 class="text-danger">Hey Dear User, Please Login or Create your Account in order to create Posts!!</h4>
    <%= image_tag "newpost.gif", class: "form-group auto-resize" %>
  </div>
<% end %>

<style>
  .break-text {
    word-wrap: break-word;
  }
  .auto-resize {
    max-width: 100%;
    display: inline-block;
    height: auto;
  }
</style>